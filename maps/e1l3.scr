	//level waittill prespawn
	//level waittill spawn

	level.aipronechance = 18
	level.aicrouchchance = 28
	level.nodrophealth = 1
	level.enemyhealthscalar = 0.7
	
	thread InitLevel
	thread InitPlayer
	//wait 1

	/*
