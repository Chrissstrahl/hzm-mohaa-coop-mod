//=========================================================================
die_thread:{
//=========================================================================
	self waittill death
	local.ent = spawn script_origin
	local.ent.origin = self.origin
	wait 1
	if (isalive level.friendly1){
		level.friendly1 lookat local.ent
	}
	wait 0.5
	if (isalive level.friendly1){
		level.friendly1 say dfr_panic_35c_118 // Man down!!
	}
	local.ent delete
}end

