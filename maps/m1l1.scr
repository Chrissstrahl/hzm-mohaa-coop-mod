					break
				}else{
					wait 2
				}
			}
			
			if (vector_length (local.player.origin - level.friendly2.origin) < 450){//chrissstrahl - make coop compatible
				local.breaksay = 2
			}
			else if (vector_length (local.player.origin - level.friendly3.origin) < 450){//chrissstrahl - make coop compatible
