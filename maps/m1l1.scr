//=========================================================================
walkover local.walk:{
//=========================================================================
	self walkto $("walkpath" + local.walk)
	self waittill movedone
	self delete
}end

//=========================================================================
door_locked:{
//=========================================================================
	if (self.timer == NIL){
		self.timer = level.time - 5
	}

	if (level.time > self.timer){
		self.timer = level.time + 5
		self playsound door_metal_locked wait
		self waittill sounddone
		self.timer = level.time - 5
	}
}end

